<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainModules"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        android:text="Welcome user!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/brand"
        android:textAllCaps="true"
        />

    <LinearLayout
        android:id="@+id/courseModuleCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/gradient_color_blue"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"
        android:elevation="10dp"
        >
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:text="Learning Material"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="true"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/universityModuleCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:layout_toRightOf="@id/courseModuleCard"
        android:background="@drawable/gradient_color"
        android:elevation="10dp"
        >
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:text="Superior University"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="true" />
    </LinearLayout>
</RelativeLayout>