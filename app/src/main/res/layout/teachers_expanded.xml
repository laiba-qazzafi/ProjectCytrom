<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="100">
   <RelativeLayout
       android:id="@+id/firstContainer"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="10"
       >
       <androidx.cardview.widget.CardView
           android:id="@+id/teacherCard"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:backgroundTint="@color/white"
           app:cardCornerRadius="10dp"
           app:cardElevation="10dp"
           >
           <androidx.cardview.widget.CardView
               android:id="@+id/imageCard"
               android:layout_width="50dp"
               android:layout_height="50dp"
               app:cardCornerRadius="50dp"
               android:layout_margin="20dp"
               >
               <ImageView
                   android:id="@+id/teacherPicExpanded"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/friends"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:id="@+id/teacherNameExpanded"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher Name"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/tphNum"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+92 321 1234567"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="30dp"
               />
           <TextView
               android:id="@+id/tOfficeNum"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Office no. 23"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="50dp"
               android:layout_marginBottom="10dp"
               />

       </androidx.cardview.widget.CardView>
   </RelativeLayout>

    <Button
        android:id="@+id/btnAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Available"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:cornerRadius="10dp"
        />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

</LinearLayout>