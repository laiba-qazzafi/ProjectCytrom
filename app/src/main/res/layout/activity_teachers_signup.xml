<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/white">




    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/two_rounded_corner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/faculty"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="100dp"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/person"
                android:layout_below="@id/imgView"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:hint="Enter your Name"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/brand"
                android:textColorHint="@color/brand" />

            <EditText
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:hint="Enter your Department"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/brand"
                android:textColorHint="@color/brand" />

            <EditText
                android:id="@+id/ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/department"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/corona"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:hint="Enter your Phone number"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/brand"
                android:textColorHint="@color/brand" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ph"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/alternate_email"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:hint="Enter your Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/brand"
                android:textColorHint="@color/brand" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:hint="Enter your Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="@color/brand"
                android:textColorHint="@color/brand" />



            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/gray"
                android:padding="20dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:text="Already had an account? "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/loginPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/t2"
                android:text="@string/login" />

        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>