<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuperiorModule"
    android:background="@drawable/lightblue2">
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Superior Family!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/brand"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/studentSuperiorCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        >
    <ImageView
        android:id="@+id/studentModule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/student_icon"

        />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_below="@id/studentSuperiorCard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/facultySuperiorCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="60dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/studentSuperiorCard"
        >
        <ImageView
            android:id="@+id/facultyModule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/faculty"

            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_below="@id/facultySuperiorCard"
        android:layout_toRightOf="@id/textStudent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        />
</RelativeLayout>