<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@color/white">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User!"
        android:textColor="@color/brand"
        android:textSize="22dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_margin="90dp"
        />
    <LinearLayout
        android:id="@+id/coursesModuleCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/gradient_blue"
        android:layout_below="@id/textWelcome"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Learning material"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/universityModuleCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/gradient_purple"
        android:layout_below="@id/textWelcome"
        android:layout_toRightOf="@id/coursesModuleCard"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Superior University"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

</RelativeLayout>